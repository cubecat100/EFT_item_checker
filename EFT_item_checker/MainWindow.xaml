<Window x:Class="EFT_item_checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFT_item_checker"
        xmlns:converters="clr-namespace:EFT_item_checker.Model"
        mc:Ignorable="d"
        
        Closed="Window_Closed"
        Title="EFT_item_checker" Height="500" MinHeight="500" Width="850" MinWidth="850">
    <Window.Resources>
        <converters:TextLengthToVisibilityConverter x:Key="TextLengthToVisibilityConverter"/>
        <converters:EmptyStringToZeroConverter x:Key="EmptyStringToZeroConverter"/>
    </Window.Resources>
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="White" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="퀘스트/모듈 목록" HorizontalAlignment="Center" VerticalAlignment="Center" />

                    <Grid Grid.Row="1">
                        <ComboBox ItemsSource="{Binding SortList}" SelectedItem="{Binding SortElement}" IsEnabled="{Binding ControlEnabled}">
                            
                        </ComboBox>
                    </Grid>
                    
                    <Grid Grid.Row="3" Margin="0">
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" VerticalAlignment="Center" Margin="10,0,10,0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding ControlEnabled}">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="3">
                                                    </Border>
                                                    <ScrollViewer Margin="2" x:Name="PART_ContentHost"/>
                                                    <TextBlock Text=" 검색" x:Name="PlaceholderText" IsHitTestVisible="False" Foreground="Gray" 
                                                       VerticalAlignment="Center" HorizontalAlignment="Left" Padding="4,0,0,0"
                                                       Visibility="{Binding ElementName=SearchTextBox, Path=Text.Length, Converter={StaticResource TextLengthToVisibilityConverter}}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="2">
                        <ListBox ItemsSource="{Binding VisibleTaskList}" BorderBrush="Black" BorderThickness="1"
                                 SelectedItem="{Binding SelectedTask}" SelectionMode="Single">

                            <!-- SelectedItem말고 아이템 클릭시 커맨드를 설정하여 decription 설정 -->
                            
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsVisibility}" Value="Collapsed">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border HorizontalAlignment="Stretch" Visibility="{Binding IsVisibility}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                      Command="{Binding DataContext.ToggleSelectCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                                      CommandParameter="{Binding}"/>

                                            <TextBlock Text="{Binding Name}" Margin="5,0,0,0" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Column="1" Background="White" Margin="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="아이템 목록" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ComboBox Grid.Column="2" Margin="5" IsEnabled="{Binding ControlEnabled}"
                              ItemsSource="{Binding ItemSortList}" SelectedItem="{Binding ItemSortElement}">
                        
                    </ComboBox>

                    <TextBox x:Name="SearchItemTextBox" Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center"
                             Text="{Binding SearchItemText, UpdateSourceTrigger=PropertyChanged}" 
                             IsEnabled="{Binding ControlEnabled}">
                            <TextBox.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="3">
                                                    </Border>
                                                    <ScrollViewer Margin="2" x:Name="PART_ContentHost"/>
                                                    <TextBlock Text=" 검색" x:Name="PlaceholderItemText" IsHitTestVisible="False" Foreground="Gray" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Left" Padding="4,0,0,0"
                                                               Visibility="{Binding ElementName=SearchItemTextBox, Path=Text.Length, Converter={StaticResource TextLengthToVisibilityConverter}}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                    </TextBox>
                </Grid>

                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Visible">
                        <ItemsControl ItemsSource="{Binding FilteredItems}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- 크기 변경시 폰트 크기 재설정할수도 -->
                                    <Grid Width="100" Height="100" Margin="5">
                                        <Grid.InputBindings>
                                            <MouseBinding Gesture="LeftClick"
                                                          Command="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}" />
                                        </Grid.InputBindings>

                                        <!-- 아이템 아이콘 -->
                                        <Image Source="{Binding Item.IconPath}" Stretch="Uniform"/>

                                        <!-- 아이템 이름 표시 -->
                                        <Border Background="#80000000" CornerRadius="0,0,5,0" Padding="5,2" HorizontalAlignment="Left" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding Item.ShortName}" Foreground="White" FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                                        </Border>

                                        <!-- 아이템 요구수량 표시 -->
                                        <Border Background="#80000000" Padding="5,2,5,2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                            <TextBlock Text="{Binding Required}" Foreground="White" FontWeight="Bold" FontSize="9"/>
                                        </Border>
                                        
                                        <!-- 아이템 소지 수량 표시 -->
                                        <Border Background="#00000000" Padding="5,2" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource EmptyStringToZeroConverter}}" 
                                                     Foreground="White" FontWeight="Bold" Background="#80000000" Width="30"/>
                                        </Border>

                                        <Border Background="#00000000" Padding="5,2,5,2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                            <TextBlock Text="/" Foreground="White" FontWeight="Bold" />
                                        </Border>
                                    </Grid>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>

                    </ScrollViewer>
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Row="1" Background="White" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer>
                <TextBlock Grid.Column="0" Text="{Binding Description}" VerticalAlignment="Stretch" Margin="15,5,15,5"/>
            </ScrollViewer>

            <Button Grid.Column="1" Content="Go To Wiki"
                Command="{Binding OpenLinkCommand}"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Grid>

        <!-- 슬라이드 패널 -->
        <Grid x:Name="RightSlidePanel" Width="200" Height="Auto"
              Background="LightSlateGray"
              HorizontalAlignment="Right" VerticalAlignment="Stretch"
              Visibility="Collapsed" RenderTransformOrigin="0.0,0.0" Panel.ZIndex="100">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="RightSlideTransform" X="200"/>
            </Grid.RenderTransform>

            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="1">
                <StackPanel >
                    <Button Content="Reset" Margin="10" Command="{Binding ResetCommand}"/>
                    <TextBlock Text="Language" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding LanguageList}" SelectedItem="{Binding SelectedLanguage}" Margin="10,0,10,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="LeftSlidePanel" Width="200" Height="Auto"
              Background="LightSlateGray"
              HorizontalAlignment="Left" VerticalAlignment="Stretch"
              Visibility="Collapsed" RenderTransformOrigin="0.0,0.0" Panel.ZIndex="100">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="LeftSlideTransform" X="-200"/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="23"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="구분" Margin="0,5,0,0"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="퀘스트" IsChecked="{Binding IsQuestsVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                    <CheckBox Content="은신처 모듈" IsChecked="{Binding IsStationsVisible}"/>
                </TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ㄴ"/>
                    <CheckBox Content="필수" IsChecked="{Binding IsKappaQuestsVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ㄴ"/>
                    <CheckBox Content="선택" IsChecked="{Binding IsSelectableQuestsVisible}"/>
                </TextBlock>


                <TextBlock Grid.Row="4" Text="상인" Margin="0,5,0,0"/>
                
                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="프라퍼" IsChecked="{Binding IsPraporVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="테라피스트" IsChecked="{Binding IsTherapistVisible}"/>
                </TextBlock>

                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="펜스" IsChecked="{Binding IsFenceVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="스키어" IsChecked="{Binding IsSkierVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="피스키퍼" IsChecked="{Binding IsPeacekeeperVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="메카닉" IsChecked="{Binding IsMechanicVisible}"/>
                </TextBlock>

                <TextBlock Grid.Row="11" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="래그맨" IsChecked="{Binding IsRagmanVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center">
                    <CheckBox Content="예거" IsChecked="{Binding IsJaegerVisible}"/>
                </TextBlock>

                <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Center">
                    <CheckBox Content="레프" IsChecked="{Binding IsRefVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="6" Grid.Column="2" VerticalAlignment="Center">
                    <CheckBox Content="BTR" IsChecked="{Binding IsBtrVisible}"/>
                </TextBlock>
                <TextBlock Grid.Row="7" Grid.Column="3" VerticalAlignment="Center">
                    <CheckBox Content="등대지기" IsChecked="{Binding IsLightkeeperVisible}"/>
                </TextBlock>

            </Grid>
        </Grid>

        <!-- 설정 버튼 (오른쪽 상단) -->
        <Button Content="≡" Width="30" Height="30" Margin="5" Panel.ZIndex="150" IsEnabled="{Binding ControlEnabled}"
                HorizontalAlignment="Right" VerticalAlignment="Top" Click="OpenRightPanel_Click"/>

        <!-- 필터링 버튼 (왼쪽 상단) -->
        <Button Content="≡" Width="30" Height="30" Margin="5" Panel.ZIndex="150" IsEnabled="{Binding ControlEnabled}"
                HorizontalAlignment="Left" VerticalAlignment="Top" Click="OpenLeftPanel_Click"/>
    </Grid>
</Window>
